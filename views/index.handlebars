<h1>EAT DA BURGER</h1>

<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
  	<li>
  		<p><span class="label">Burger: </span> {{burger_name}}</p>

      <button data-id="{{this.id}}" class="devour">Devour</button>
  	</li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burgers">Burger:</label>
    <textarea id="burgers" name="burgers" rows="8" cols="40"></textarea>
  </div>

  <button type="submit">Add Burger</button>
</form>